
<% if flash[:notice] %>
 <div class="flash">
  <%= flash[:notice] %>
 </div>
<% end %>

<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th></th>
  </tr>
 </thead>

 <tbody>
<% @books.each do |book| %>
 <tr>
 <td>
<span><%= book.title %></span>
 </td>
 <td>
<span><%= book.body %></span>
 </td>
 <td>
 <%= link_to "Show", book_path(book.id) %>
 </td>
 <td>
  <%= link_to "Edit", edit_book_path(book) %>
 </td>
 <td>
  <%= link_to "Destroy", book_path(book), method: :delete, "date-confirm" => "Are you sure?" %>
 </td>
<% end %>
 </tr>
 </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title, :placeholder =>"#{@book.title}" %>
<p>Body</p>
<%= f.text_area :body, :placeholder =>"#{@book.body}" %>

<br><%= f.submit 'Create Book' %></br>
<% end %>